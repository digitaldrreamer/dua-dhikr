{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "module": "commonjs",
    "strict": true,
    "target": "ES2020",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules"]
}
